<div id="container">
	<input type="hidden" id="categoryId" value="{{categoryid}}"/>
	{% if categoryid is empty %}
	<p>Select a category to browse the stories within</p>
	<table id="categoryIndex" class="hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Stories</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories.categories %}
			<tr data-id="{{category.id}}">
				<td>{{category.nameReadable}}</td>
				<td>{{category.storiesCount}}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	{% else %}
	<p>Select a story to view it</p>
	<table id="storyIndex" class="hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Story</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
	{% endif %}
</div>